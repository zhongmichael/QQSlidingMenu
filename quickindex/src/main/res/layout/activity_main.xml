<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.quickindex.MainActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview"></ListView>

    <com.example.quickindex.view.QuickIndexBar
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:id="@+id/quickindex_bar"
        android:background="#B51421"
        android:layout_alignParentRight="true"/>

    <TextView android:layout_width="110dp"
              android:background="@drawable/bg"
              android:textSize="50sp"
              android:id="@+id/currentWord"
              android:textStyle="bold"
              android:textColor="#fff"
              android:gravity="center"
              android:layout_centerInParent="true"
              android:layout_height="110dp"/>
</RelativeLayout>
